	pages = {1267--1277},
	file = {ACS Full Text Snapshot:files/9303/acs.est.html:text/html;Full Text PDF:files/9301/Harrison et al. - 2017 - Reservoir Water-Level Drawdowns Accelerate and Amp.pdf:application/pdf}
}

