	pages = {329--342},
	file = {ScienceDirect Full Text PDF:files/9240/Ernst et al. - 2009 - Abundance and toxicity of Planktothrix rubescens i.pdf:application/pdf;ScienceDirect Snapshot:files/9238/S1568988308000784.html:text/html}
