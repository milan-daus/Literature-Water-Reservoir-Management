	keywords = {Biofilms, Biological transport, Dermatologic pathology, Image processing, Scanning electron microscopy, Sediment, Shear stresses, Surface water},
	pages = {e0142673},
	file = {Full Text PDF:files/9247/Fang et al. - 2015 - Biostabilization and Transport of Cohesive Sedimen.pdf:application/pdf;Snapshot:files/9250/article.html:text/html}
}

