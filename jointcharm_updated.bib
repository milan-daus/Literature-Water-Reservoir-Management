	pages = {5221--5231},
	file = {ScienceDirect Full Text PDF:files/9150/Banasiak et al. - 2005 - The erosion behaviour of biologically active sewer.pdf:application/pdf;ScienceDirect Snapshot:files/9149/S0043135405005816.html:text/html}
